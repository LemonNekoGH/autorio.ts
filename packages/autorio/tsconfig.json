{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "moduleResolution": "Node",
    "types": [
      "typed-factorio/runtime",
      "lua-types/jit"
    ],
    "strict": true,
    "outDir": "./dist"
  },
  "tstl": {
    "luaTarget": "JIT"
  },
  "include": [
    "src/**/*.ts"
  ]
}
