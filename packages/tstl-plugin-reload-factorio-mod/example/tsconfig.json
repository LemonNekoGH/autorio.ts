{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "types": [
      "typed-factorio/runtime",
      "lua-types/jit"
    ],
    "strict": true,
    "outDir": "./dist"
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaPlugins": [
      { "name": "../dist/index.js" }
    ],
    "luaLibImport": "inline",
    "buildMode": "default"
  }
}
